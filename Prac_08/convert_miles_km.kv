BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: miles
            text: '1'
            font_size: 40
            multiline: True
            size_hint_x: 0.75
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: "Up"
                on_press: app.increment(miles)
            Button:
                text: "Down"
                on_press: app.reduction(miles)
    Button:
        text: 'Convert miles to km'
        on_press: app.handle_conversion(miles)
    Label:
        id: output_label
        font_size: 40
        color: (1, 0, 1, 1)